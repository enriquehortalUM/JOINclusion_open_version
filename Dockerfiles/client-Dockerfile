FROM node
RUN apt-get update \
&& apt-get install -y \
        build-essential \
        cmake \
        git \
        wget \
        unzip \
        yasm \
        pkg-config \
        vim
RUN git clone https://github.com/JohnChristidis/joinclusion-client.git app
WORKDIR /app
RUN npm install
RUN npm install -g nodemon
